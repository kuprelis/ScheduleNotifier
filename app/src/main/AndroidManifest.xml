<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simaskuprelis.schedulenotifier" >

    <permission android:name="com.simaskuprelis.schedulenotifier.PRIVATE" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="com.simaskuprelis.schedulenotifier.PRIVATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity android:label="@string/app_name"
            android:name=".EventListActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:label="@string/edit_event"
            android:name=".EventPagerActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value=".EventListActivity" />
        </activity>

        <service android:name=".TimerService" />

        <receiver android:name=".StartupReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver android:name=".RestartReceiver"
                  android:exported="false" >
            <intent-filter android:priority="-999">
                <action android:name="com.simaskuprelis.schedulenotifier.RESTART_TIMER" />
            </intent-filter>
        </receiver>

    </application>

</manifest>